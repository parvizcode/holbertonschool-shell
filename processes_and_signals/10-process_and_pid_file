#!/usr/bin/env bash
# Creates PID file, handles signals, and displays messages

# Create PID file
echo $$ > /var/run/myscript.pid

# Signal handlers
trap 'echo "I hate the kill command"; rm -f /var/run/myscript.pid; exit' SIGTERM
trap 'echo "Y U no love me?!"; rm -f /var/run/myscript.pid; exit' SIGINT
trap 'rm -f /var/run/myscript.pid; exit' SIGQUIT

# Main loop
while true; do
  echo "To infinity and beyond"
  sleep 1
done
